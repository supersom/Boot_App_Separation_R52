LR_BOOT 0x00000000 0x00010000   ; 64 KB boot ROM
{
    ER_BOOT   0x00000000 0x00010000
    {
        * (RESET, +First)
        .ANY (+RO)
    }

    SHARED_RW   0x10000000 0x1000
    {
        * (BOOT_ARGS)
    }

    RW_BOOT   0x30000000 0x00008000  ; 32KB RAM
    {
        .ANY (+RW,+ZI)
    }

    ARM_LIB_HEAP 0x20000000 EMPTY 0x00004000 ; 16KB Heap
    {
    }

    ARM_LIB_STACK 0x20008000 EMPTY -0x00004000 ; 16KB Stack
    {
    }
}
